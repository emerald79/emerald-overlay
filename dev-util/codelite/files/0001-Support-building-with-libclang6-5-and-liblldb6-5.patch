From 5c2eb47b28c3a9236bf4592e18e3d9e554b70bd1 Mon Sep 17 00:00:00 2001
From: Eran Ifrah <eran.ifrah@gmail.com>
Date: Mon, 7 May 2018 13:00:22 -0400
Subject: [PATCH] Support building with libclang6/5 and liblldb6/5

---
 cmake/Modules/FindLibClang.cmake | 4 ++++
 cmake/Modules/FindLibLLDB.cmake  | 4 ++++
 2 files changed, 8 insertions(+)

diff --git a/cmake/Modules/FindLibClang.cmake b/cmake/Modules/FindLibClang.cmake
index 1991f5606..529ab0a70 100644
--- a/cmake/Modules/FindLibClang.cmake
+++ b/cmake/Modules/FindLibClang.cmake
@@ -5,6 +5,9 @@ if (UNIX)
                      HINTS  
                      /usr/lib 
                      /usr/local/lib 
+                     /usr/lib/llvm-7.0/lib
+                     /usr/lib/llvm-6.0/lib
+                     /usr/lib/llvm-5.0/lib
                      /usr/lib/llvm-4.2/lib
                      /usr/lib/llvm-4.1/lib
                      /usr/lib/llvm-4.0/lib
@@ -22,6 +24,9 @@ if (UNIX)
 
         find_path(LIBCLANG_INCLUDE_T NAMES clang-c/Index.h
                   HINTS 
+                  /usr/lib/llvm-7.0/include
+                  /usr/lib/llvm-6.0/include
+                  /usr/lib/llvm-5.0/include
                   /usr/lib/llvm-4.2/include 
                   /usr/lib/llvm-4.1/include 
                   /usr/lib/llvm-4.0/include 
diff --git a/cmake/Modules/FindLibLLDB.cmake b/cmake/Modules/FindLibLLDB.cmake
index e9c165001..794063b78 100644
--- a/cmake/Modules/FindLibLLDB.cmake
+++ b/cmake/Modules/FindLibLLDB.cmake
@@ -6,6 +6,9 @@ if (UNIX)
                      HINTS  
                      /usr/lib 
                      /usr/local/lib 
+                     /usr/lib/llvm-7.0/lib
+                     /usr/lib/llvm-6.0/lib
+                     /usr/lib/llvm-5.0/lib
                      /usr/lib/llvm-4.2/lib
                      /usr/lib/llvm-4.1/lib
                      /usr/lib/llvm-4.0/lib
@@ -23,6 +25,9 @@ if (UNIX)
 
         find_path(LIBLLDB_INCLUDE_T NAMES lldb/API/SBDebugger.h
                   HINTS 
+                  /usr/lib/llvm-7.0/include
+                  /usr/lib/llvm-6.0/include
+                  /usr/lib/llvm-5.0/include
                   /usr/lib/llvm-4.2/include 
                   /usr/lib/llvm-4.1/include 
                   /usr/lib/llvm-4.0/include 
